doctype html
html
  head
    meta(charset='utf-8')
    title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='./stylesheets/layout.css', rel='stylesheet', type='text/css', media='screen')
    link(href='./stylesheets/form.css', rel='stylesheet', type='text/css', media='screen')
    script(src='./javascripts/jquery.min.js', type='application/javascript')
  body
    .container
      header
        a(href='#')
          img(src='./images/media/socket-app-logo.png', alt='socket-logo')
        nav
          ul
            li
              a(href='#') HOME
            li
              a(href='#') ABOUT
            li
              a(href='#') REGISTER
            li
              a(href='#') CONTACT
        // Nav menu for smaller devices
        select#small-nav
          option(value='home') HOME
          option(value='about') ABOUT
          option(value='register') REGISTER
          option(value='contact') CONTACT
        // 
      // end .header
      .content
        form(action='/signup' method='POST')
          input.input-box(type='text', name='firstName', placeholder='Full Name', required='')
          br
          br
          input.input-box(type='text', name='lastName', placeholder='Last Name', required='')
          br
          br
          input.input-box(type='email', name='username', placeholder='Email ID', required='')
          br
          br
          input.input-box(type='password', name='password', placeholder='Create Password', required='')
          br
          br
          input.input-box(type='password', placeholder='Retype Password', required='')
          br
          br
          button#submit SUBMIT
          br
        // end .form
        // end .content
      footer
        p Footer
      // end .footer
      // end .container
